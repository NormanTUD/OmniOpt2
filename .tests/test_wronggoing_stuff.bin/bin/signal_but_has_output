#!/bin/bash

send_sigterm() {
    echo "Sending SIGTERM signal to self..."
    kill -9 $$
}

sigterm_handler() {
    echo "Received SIGTERM signal. Exiting..."
    exit 4
}

trap 'sigterm_handler' SIGTERM

echo "Waiting for 1 seconds before sending SIGTERM signal..."
sleep 1

echo "RESULT: $RANDOM"

send_sigterm
